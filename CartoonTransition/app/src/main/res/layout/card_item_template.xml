<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:elevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:scaleType="centerCrop"
                android:transitionName="selectedMovie"
                tools:src="@drawable/bg_findingnemo" />

            <View
                android:id="@+id/vw_blacklayer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".4"
                android:background="@android:color/black" />

            <ImageView
                android:id="@+id/img_cover_d"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginStart="12dp"
                android:scaleType="centerCrop"
                android:transitionName="selectedThumbCartoon"
                tools:src="@drawable/thumb_findingnemo" />

            <TextView
                android:id="@+id/txt_cartoon_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_cover_d"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/img_cover_d"
                android:layout_toRightOf="@+id/img_cover_d"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                tools:text="Finding Nemo" />

            <TextView
                android:id="@+id/txt_plot_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_cartoon_details"
                android:layout_toEndOf="@+id/img_cover_d"
                android:layout_toRightOf="@+id/img_cover_d"
                android:ellipsize="end"
                android:lines="3"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                tools:text="A clown fish named Marlin lives in the Great Barrier Reef loses his son, Nemo. After he ventures into the open sea, despite his father's constant warnings about many of the ocean's dangers. Nemo is abducted by a boat and netted up and sent to a dentist's office in Sydney." />

            <TextView
                android:id="@+id/txt_release_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_plot_d"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/img_cover_d"
                android:layout_toRightOf="@+id/img_cover_d"
                android:paddingLeft="12dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Release date: May 30, 2003" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
